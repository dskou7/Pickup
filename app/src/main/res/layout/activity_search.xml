<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dskou7.pickup.SearchActivity">

    <TextView android:id="@+id/GameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listing Title" />

    <EditText
        android:id="@+id/title_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView android:id="@+id/ListingGamePlayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance To Me" />

    <EditText
        android:id="@+id/gamePlayers_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/ListingGameDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Time"/>

    <EditText
        android:id="@+id/gameDesc_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/timeButton_listing"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Search" />

</LinearLayout>
