<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dskou7.pickup.CreateListing"
    android:orientation="vertical">

    <TextView android:id="@+id/ListingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listing Title" />

    <EditText
        android:id="@+id/title_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/ListingGameName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of Game" />

    <EditText
        android:id="@+id/gameName_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/ListingGamePlayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of Players Needed" />

    <EditText
        android:id="@+id/gamePlayers_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/ListingGameDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description (optional)"/>

    <EditText
        android:id="@+id/gameDesc_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/timeButton_listing"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Set time" />

    <Button
        android:id="@+id/create_listing_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Create Event" />

</LinearLayout>
